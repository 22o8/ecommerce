# Example env (copy to .env.local for local dev)
NUXT_PUBLIC_SITE_URL=http://localhost:3000
NUXT_PUBLIC_SITE_NAME=Ecommerce

# API origin WITHOUT /api
# خيار 1 (مُوصى به): استخدم الـ API المنشور على Render لتجنب مشاكل شهادة HTTPS المحلية
NUXT_API_ORIGIN=https://ecommerce-api-endk.onrender.com

# optional public base WITH /api (only if you use it)
NUXT_PUBLIC_API_BASE=https://ecommerce-api-endk.onrender.com/api

# خيار 2 (تشغيل API محلياً):
# ملاحظة: اذا الـ API شغال HTTPS محلي بشهادة dev، الافضل تشغله HTTP او تثق بالشهادة.
# NUXT_API_ORIGIN=http://localhost:7043
# NUXT_PUBLIC_API_BASE=http://localhost:7043/api

# خيار 2 (محلي): إذا كنت تشغل الـ API محلياً على HTTP
# NUXT_API_ORIGIN=http://localhost:7043
# NUXT_PUBLIC_API_BASE=http://localhost:7043/api

NUXT_PUBLIC_WHATSAPP_NUMBER=9640000000000
